<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="#ffdff7df" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/tblTitle" android:background="@drawable/top_back_ground" android:layout_width="fill_parent" android:layout_height="44.0dip">
        <RelativeLayout android:id="@id/top_left_bg" android:background="@drawable/topbar_minibtn_bg_selector" android:layout_width="44.0dip" android:layout_height="44.0dip">
            <ImageView android:id="@id/iv_top_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back" android:layout_centerInParent="true" />
        </RelativeLayout>
        <TextView android:textSize="@dimen/topbar_title_text_size" android:textColor="#ffffffff" android:layout_gravity="center" android:id="@id/tv_top_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/weatherinfo" android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout android:id="@+id/cityandtemp"
         android:layout_width="fill_parent"
         android:layout_height="120.0dip"
         android:background="#ffdff7df" android:orientation="horizontal" >
        <RelativeLayout
         android:id="@+id/mycity"
         android:background="#ffdff7df"
         android:gravity="center"
         android:layout_width="0.0dip" android:layout_weight="1.0" android:layout_height="fill_parent" android:layout_alignParentLeft="true" >
         <TextView
             android:id="@+id/weatherCity"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:text="武汉"
             android:textColor="#ff156326"
             android:textSize="40sp" />   
          </RelativeLayout>
            
        <RelativeLayout
         android:id="@+id/myssTemp"
         android:background="#ffdff7df" 
         android:gravity="center"
         android:layout_width="0.0dip" android:layout_weight="1.0" android:layout_height="fill_parent"  android:layout_alignParentRight="true">
             <TextView
             android:id="@+id/weatherSSTemperature"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:text="20°C"
             android:textColor="#ff156326"
             android:textSize="40sp" />   
            
            </RelativeLayout>
      </LinearLayout>    
   	 <LinearLayout android:id="@+id/mytemperature"
         android:layout_width="fill_parent"
         android:layout_height="40.0dip"
         android:background="#ffdff7df" android:orientation="horizontal" >
        <TextView
             android:id="@+id/weatherTemperature"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="20dp"
             android:text="15°C/25°C"
             android:textColor="#ff156326"
             android:textSize="25sp" />
        </LinearLayout>
        
   	  <LinearLayout android:id="@+id/myweather"
         android:layout_width="fill_parent"
         android:layout_height="40.0dip"
         android:background="#ffdff7df" android:orientation="horizontal" >
        <TextView
             android:id="@+id/weatherSpecific"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="20dp"
             android:text="多云转晴"
             android:textColor="#ff156326"
             android:textSize="25sp" />
        </LinearLayout>
        
   	  <LinearLayout android:id="@+id/mywind"
         android:layout_width="fill_parent"
         android:layout_height="40.0dip"
         android:background="#ffdff7df" android:orientation="horizontal" >
        <TextView
             android:id="@+id/weatherWind"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="20dp"
             android:text="无持续风向微风"
             android:textColor="#ff156326"
             android:textSize="25sp" />
        </LinearLayout>
        
   	  <LinearLayout android:id="@+id/myultra"
         android:layout_width="fill_parent"
         android:layout_height="40.0dip"
         android:background="#ffdff7df" android:orientation="horizontal" >
        <TextView
             android:id="@+id/indexNumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="20dp"
             android:text="紫外线强度：中等"
             android:textColor="#ff156326"
             android:textSize="25sp" />
        </LinearLayout>
        
   	  <LinearLayout android:id="@+id/myairquality"
         android:layout_width="fill_parent"
         android:layout_height="40.0dip"
         android:background="#ffdff7df" android:orientation="horizontal" >
        <TextView
             android:id="@+id/airqualityNumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="20dp"
             android:text="空气质量：良"
             android:textColor="#ff156326"
             android:textSize="25sp" />
        </LinearLayout>

</LinearLayout>