     <LinearLayout android:layout_margin="10dip"  android:orientation="vertical" android:id = "@+id/graph_view" android:layout_width="fill_parent" android:layout_height="fill_parent" >
     </LinearLayout>
     
 </LinearLayout>
</LinearLayout>