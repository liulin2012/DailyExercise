<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#fff0f0f0" android:endColor="#ffe4e4e4" android:angle="90.0" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#ffc5c5c5" android:endColor="#fff7f7f7" android:angle="90.0" />
        </shape>
    </item>
</selector>