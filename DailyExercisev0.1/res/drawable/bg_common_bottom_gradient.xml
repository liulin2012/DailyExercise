<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#ffc5c5c5" android:endColor="#ffffffff" android:angle="270.0" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#ffc5c5c5" android:endColor="#ffffffff" android:angle="270.0" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#fff0f0f0" android:endColor="#ffe6e6e6" android:angle="270.0" />
        </shape>
    </item>
</selector>